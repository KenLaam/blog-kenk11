<div class='row'>
  <div class="col-sm-8 col-sm-offset-2">
    <div class="card">
      <div class="card-block">
        <h2><%= link_to article.title, article, class: 'card-title' %></h2>
        <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>

      </div>
      <div class="card-footer">
        <div class="row">
          <div class="col-md-6">
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary-outline  ' %>
            <%= link_to 'Delete', article, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger-outline' %>
          </div>

          <div class="col-md-6" align="right">
            Last updated: <%= local_time_ago(article.updated_at) %>
            <br>
            <%= article.view.nil? ? 0 : article.view %> views
          </div>
        </div>

      </div>
    </div>
  </div>
</div>