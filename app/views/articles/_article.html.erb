<div class="row">
  <div class="col-sm-8">
        <div class="card">
          <!--<img class="card-img-top" data-src="..." alt="Card image cap">-->
          <div class="card-block">
            <h4 class="card-title"><%= article.title %></h4>
            <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
            <!--<a href="#" class="btn btn-primary">Button</a>-->
          </div>
          <div class="card-footer">
            <%= link_to 'Edit', edit_article_path(article), class:'btn btn-primary-outline  ' %>
            <%= link_to 'Delete', article, method: :delete, data:{confirm: 'Are you sure?'}, class:'btn btn-danger-outline' %>
          </div>
        </div>
  </div>
</div>